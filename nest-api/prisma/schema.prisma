generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum CreativeStatus {
  ACTIVE
  PAUSED
  NEW
}

enum CampaignStatus {
  ACTIVE
  PAUSED
  NEW
}

model Creative {
  id          Int             @id @default(autoincrement())
  size        String
  status      CreativeStatus
  addedDate   DateTime        @default(now())
  changedDate DateTime        @updatedAt() 

  campaigns   Campaign[]      @relation("CampaignCreatives")
}

model Campaign {
  id          Int               @id @default(autoincrement())
  budget      String
  name        String
  startDate   DateTime
  endDate     DateTime
  status      CampaignStatus
  addedDate   DateTime          @default(now())
  changedDate DateTime          @updatedAt() 

  creatives   Creative[]        @relation("CampaignCreatives")
}